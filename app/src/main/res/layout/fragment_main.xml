<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".activity.MainActivity"
    tools:showIn="@layout/layout_content_main">
    <android.support.design.widget.TabLayout
        android:id="@+id/fragment_main_tl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="#ff996633"
        app:tabSelectedTextColor="#ff775522"
        android:fitsSystemWindows="true"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:tabTextColor="#ff222222"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_main_vp"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:background="#852"
        android:layout_height="match_parent"/>

</LinearLayout>
